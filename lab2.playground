//3
func divides (_ a: Int,_ b: Int) -> Bool {
    if(a%b==0){
        return true;
    }
    return false;
}

func countDivisors (_ a: Int) -> Int {
    var sum = 0;
    for i in 1...a{
        if(a%i==0){
            sum = sum + 1;
        }
    }
    return sum;
}

func isPrime (_ a: Int) -> Bool {
    if(a > 2){
        return false;
    }
    for i in 2...a/2{
        if(a%i==0){
            return false;
        }
    }
    return true;
}

print(divides(40,4));
print(countDivisors(49));
print(isPrime(49));

